{
  "buildCommand": "npm run build",
  "redirects": [
    {
      "source": "/client/:path*",
      "destination": "/:path*",
      "permanent": true
    },
    {
      "source": "/blog/:slug((?!tag).*)",
      "destination": "/:slug",
      "permanent": true
    },
    {
      "source": "/blog/tag/:tag",
      "destination": "/tag/:tag",
      "permanent": true
    },
    {
      "source": "/blog/:slug/(.*)",
      "destination": "/:slug",
      "permanent": true
    },
    {
      "source": "/blog/impossiblelist",
      "destination": "/impossiblelist",
      "permanent": true
    }
  ]
}
