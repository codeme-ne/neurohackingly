{
  "buildCommand": "astro build && npx pagefind --site .vercel/output/static",
  "redirects": [
    {
      "source": "/blog/:slug((?!tag).*)",
      "destination": "/:slug",
      "permanent": true
    },
    {
      "source": "/blog/tag/:tag",
      "destination": "/tag/:tag",
      "permanent": true
    },
    {
      "source": "/blog/:slug/(.*)",
      "destination": "/:slug",
      "permanent": true
    },
    {
      "source": "/blog/impossiblelist",
      "destination": "/impossiblelist",
      "permanent": true
    }
  ]
}
