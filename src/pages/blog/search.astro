---
import Layout from '../../layouts/BlogPost.astro';
import Search from '../../components/Search.astro';
import { getCollection } from 'astro:content';

// Get recent posts for sidebar
const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const recentPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

const pageTitle = 'Search Blog Posts';
const pageDescription = 'Search through all blog posts to find exactly what you\'re looking for';
---

<Layout
  title={pageTitle}
  description={pageDescription}
  page={true}
>
  <main class="search-page">
    <div class="container">
      <header class="search-header">
        <h1>{pageTitle}</h1>
        <p class="search-description">{pageDescription}</p>
      </header>

      <div class="search-main">
        <Search placeholder="Type to search posts (e.g., 'Halloween', 'productivity', 'learning')..." />

        <div class="search-tips">
          <h3>Search Tips</h3>
          <ul>
            <li>üîç Search finds content anywhere in posts - titles, descriptions, and full text</li>
            <li>üìù Type at least 2 characters to start searching</li>
            <li>‚ö° Results appear instantly as you type</li>
            <li>üéØ Searches through entire post content, even the last line</li>
            <li>üè∑Ô∏è Includes tags and author names in search</li>
          </ul>
        </div>
      </div>

      <aside class="search-sidebar">
        <div class="recent-posts">
          <h3>Recent Posts</h3>
          <ul>
            {recentPosts.map((post) => (
              <li>
                <a href={`/blog/${post.id}`}>
                  <span class="post-title">{post.data.title}</span>
                  <span class="post-date">
                    {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </div>

        <div class="popular-tags">
          <h3>Popular Tags</h3>
          <div class="tag-cloud">
            {Array.from(new Set(posts.flatMap(post => post.data.tags || [])))
              .slice(0, 15)
              .map(tag => (
                <button
                  class="tag-button"
                  data-tag={tag}
                  onclick={`document.getElementById('search-input').value = '${tag}'; document.getElementById('search-input').dispatchEvent(new Event('input'));`}
                >
                  {tag}
                </button>
              ))
            }
          </div>
        </div>
      </aside>
    </div>
  </main>
</Layout>

<style>
  .search-page {
    min-height: 70vh;
    padding: 2rem 1rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .container {
      grid-template-columns: 2fr 1fr;
      grid-template-areas:
        "header header"
        "main sidebar";
    }
  }

  .search-header {
    grid-area: header;
    text-align: center;
    margin-bottom: 2rem;
  }

  .search-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #2d3748;
  }

  .search-description {
    font-size: 1.125rem;
    color: #718096;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-main {
    grid-area: main;
  }

  .search-tips {
    margin-top: 3rem;
    padding: 1.5rem;
    background-color: #f7fafc;
    border-radius: 0.5rem;
    border: 1px solid #e2e8f0;
  }

  .search-tips h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.125rem;
    color: #2d3748;
  }

  .search-tips ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .search-tips li {
    padding: 0.5rem 0;
    color: #4a5568;
    line-height: 1.6;
  }

  .search-sidebar {
    grid-area: sidebar;
  }

  .recent-posts,
  .popular-tags {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background-color: #fff;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
  }

  .recent-posts h3,
  .popular-tags h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.125rem;
    color: #2d3748;
  }

  .recent-posts ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .recent-posts li {
    margin-bottom: 0.75rem;
  }

  .recent-posts a {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
    border-radius: 0.25rem;
    transition: background-color 0.15s;
  }

  .recent-posts a:hover {
    background-color: #f7fafc;
  }

  .post-title {
    color: #2d3748;
    font-size: 0.875rem;
    line-height: 1.4;
    margin-bottom: 0.25rem;
  }

  .post-date {
    color: #a0aec0;
    font-size: 0.75rem;
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-button {
    padding: 0.375rem 0.75rem;
    background-color: #edf2f7;
    color: #4a5568;
    border: 1px solid #cbd5e0;
    border-radius: 9999px;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.15s;
    font-family: inherit;
  }

  .tag-button:hover {
    background-color: #e2e8f0;
    color: #2d3748;
    transform: translateY(-1px);
  }

  .tag-button:active {
    transform: translateY(0);
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .search-header h1 {
      color: #e2e8f0;
    }

    .search-description {
      color: #a0aec0;
    }

    .search-tips {
      background-color: #2d3748;
      border-color: #4a5568;
    }

    .search-tips h3 {
      color: #e2e8f0;
    }

    .search-tips li {
      color: #a0aec0;
    }

    .recent-posts,
    .popular-tags {
      background-color: #2d3748;
      border-color: #4a5568;
    }

    .recent-posts h3,
    .popular-tags h3 {
      color: #e2e8f0;
    }

    .recent-posts a:hover {
      background-color: #1a202c;
    }

    .post-title {
      color: #e2e8f0;
    }

    .post-date {
      color: #718096;
    }

    .tag-button {
      background-color: #4a5568;
      color: #e2e8f0;
      border-color: #718096;
    }

    .tag-button:hover {
      background-color: #718096;
      color: #fff;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 767px) {
    .search-header h1 {
      font-size: 2rem;
    }

    .container {
      gap: 2rem;
    }

    .search-sidebar {
      margin-top: 2rem;
    }
  }
</style>