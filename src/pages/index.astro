---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import SEO from '../components/SEO.astro';
import '../styles/global.css';

const posts = await getCollection('blog', ({ data }) => !data.draft && data.featured && !data.page);
const recentPosts = (await getCollection('blog', ({ data }) => !data.draft && !data.page))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEO
    title="Neurohackingly - Productivity, AI & Neuroscience"
    description="Practical strategies and insights on productivity, AI, and personal growth by Lukas Zangerl"
  />
</head>
<body>
  <nav>
    <a href="/" class="active">Home</a>
    <a href="/blog">Blog</a>
    <a href="/blog/impossiblelist">Impossible List</a>
    <a href="/blog/now">Now</a>
    <a href="/newsletter">Newsletter</a>
  </nav>

  <main>
    <header class="hero hero--split">
      <div class="hero-inner">
        <div class="hero-copy">
          <h1>Neurohackingly</h1>
          <p class="tagline">Upgrade your brain, mind, and body</p>
          <p class="subtitle">Practical strategies for productivity, AI, and personal growth</p>

          <form class="signup" action="/newsletter" method="get" aria-label="Join the newsletter">
            <label class="sr-only" for="hero-email">Email address</label>
            <input id="hero-email" name="email" type="email" placeholder="Email address" autocomplete="email" required />
            <button class="cta" type="submit">Subscribe</button>
          </form>
        </div>

        <div class="hero-media" aria-label="Featured video">
          <div class="video-wrapper">
            <iframe
              src="https://www.youtube-nocookie.com/embed/lmrUcdGyguA?rel=0"
              title="YouTube video"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
    </header>

    <section class="recent-posts">
      <h2>Recent Articles</h2>
      <div class="posts-grid">
        {recentPosts.map((post) => (
          <article class="post-card">
            {post.data.hero ? (
              <Image
                src={post.data.hero}
                alt={post.data.image?.alt ?? ''}
                widths={[480, 768]}
                sizes="(max-width: 720px) 100vw, 360px"
                formats={['avif', 'webp', 'jpeg']}
                loading="lazy"
                decoding="async"
              />
            ) : post.data.image && (
              <img src={post.data.image.url} alt={post.data.image.alt} loading="lazy" decoding="async" />
            )}
            <div class="post-content">
              <h3>
                <a href={`/blog/${post.id}`}>{post.data.title}</a>
              </h3>
              {post.data.description?.trim() !== post.data.title?.trim() && (
                <p>{post.data.description}</p>
              )}
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
              </time>
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="newsletter-cta">
      <h2>Join the Newsletter</h2>
      <p>Get actionable productivity tips and insights delivered weekly</p>
      <a href="/newsletter" class="cta">Subscribe Now →</a>
    </section>
  </main>

  <footer>
    <p>© 2025 Neurohackingly by Lukas Zangerl</p>
    <div class="social">
      <a href="https://x.com/neurohackingly" target="_blank">X</a>
      <a href="https://linkedin.com/in/lukzan" target="_blank">LinkedIn</a>
      <a href="https://github.com/codeme-ne" target="_blank">GitHub</a>
    </div>
  </footer>
</body>
</html>

<style>
  /* Ali Abdaal-like hero: left copy + right video */
  .hero {
    text-align: left;
    padding: 3rem 0 4rem;
  }

  .hero h1 {
    font-size: 2.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .hero .tagline {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .hero .subtitle {
    font-size: 1.1rem;
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  /* Header layout: copy left, video right on desktop; stacked on mobile */
  .hero-inner {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: center;
  }

  @media (min-width: 900px) {
    .hero-inner {
      grid-template-columns: 1.2fr 1fr;
      gap: 3rem;
    }
    .hero h1 {
      font-size: 3.5rem;
    }
  }

  /* Inline signup like the theme */
  .signup {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 0.5rem;
    margin-top: 2rem;
    max-width: 540px;
  }

  .signup input[type="email"] {
    font: inherit;
    padding: 0.85rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background: var(--color-bg, #fff);
    color: inherit;
    width: 100%;
    font-size: 1rem;
  }

  .signup input[type="email"]:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .signup .cta {
    margin: 0;
    white-space: nowrap;
    padding: 0.85rem 1.5rem;
    font-size: 1rem;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  .hero-media .video-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    background: #000;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  }

  .hero-media iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 899px) {
    .hero {
      padding: 2rem 0 3rem;
    }
    .hero h1 {
      font-size: 2.25rem;
    }
    .hero .tagline {
      font-size: 1.25rem;
    }
  }
</style>
