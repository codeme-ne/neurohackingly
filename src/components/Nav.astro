---
import Search from './Search.astro';

const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/blog/impossiblelist', label: 'Impossible List' },
  { href: '/blog/now', label: 'Now' },
  { href: '/newsletter', label: 'Newsletter' }
];

const isActive = (href: string) => {
  if (href === '/') return pathname === '/';
  if (href === '/blog') return pathname === '/blog' || pathname.startsWith('/blog/');
  return pathname === href;
};

const navId = `site-nav-${Math.random().toString(36).slice(2, 9)}`;
---

<header class="site-header" data-site-header={navId}>
  <div class="site-header__inner">
    <a href="/" class="site-header__brand">Neurohackingly</a>

    <button
      class="site-header__toggle"
      type="button"
      aria-expanded="false"
      aria-controls={navId}
      data-nav-toggle
    >
      <span class="site-header__toggle-bar"></span>
      <span class="site-header__toggle-bar"></span>
      <span class="site-header__toggle-bar"></span>
      <span class="sr-only">Toggle navigation</span>
    </button>

    <nav class="site-nav" id={navId} data-site-nav>
      <div class="site-nav__inner">
        <div class="site-nav__search" data-nav-search>
          <Search placeholder="Search the site" label="Search the site" />
        </div>

        <div class="site-nav__section">
          <span class="site-nav__section-title">Pages</span>
          <div class="site-nav__links" data-nav-links>
            {navLinks.map((link) => (
              <a
                href={link.href}
                class={`site-nav__link${isActive(link.href) ? ' is-active' : ''}`}
                data-nav-link
              >
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  :global(.sr-only) {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .site-header {
    position: sticky;
    top: 0;
    z-index: 900;
    backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.9);
    border-bottom: 1px solid rgba(219, 219, 219, 0.8);
  }

  .site-header__inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0.75rem 1.25rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  .site-header__brand {
    font-family: var(--font-serif);
    font-size: 1.15rem;
    font-weight: 700;
    letter-spacing: 0.02em;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .site-header__brand:hover {
    color: var(--color-text-medium);
  }

  .site-nav {
    display: flex;
    align-items: center;
  }

  .site-nav__inner {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .site-nav__search {
    display: none;
  }

  .site-nav__section {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .site-nav__links {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .site-nav__section-title {
    display: none;
  }

  .site-nav__link {
    position: relative;
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-text-medium);
    text-decoration: none;
    padding: 0.35rem 0;
    transition: color 0.2s ease;
  }

  .site-nav__link::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: -0.45rem;
    height: 2px;
    transform: scaleX(0);
    transform-origin: bottom right;
    background: var(--color-text);
    transition: transform 0.2s ease;
  }

  .site-nav__link:hover,
  .site-nav__link:focus-visible {
    color: var(--color-text);
  }

  .site-nav__link:hover::after,
  .site-nav__link:focus-visible::after,
  .site-nav__link.is-active::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .site-nav__link.is-active {
    color: var(--color-text);
  }

  .site-header__toggle {
    display: none;
    flex-shrink: 0;
    flex-direction: column;
    gap: 6px;
    padding: 0.5rem;
    border: 1px solid rgba(23, 28, 38, 0.14);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.75);
    cursor: pointer;
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .site-header__toggle:hover,
  .site-header__toggle:focus-visible {
    border-color: rgba(23, 28, 38, 0.25);
    background: rgba(255, 255, 255, 0.95);
  }

  .site-header__toggle-bar {
    width: 18px;
    height: 2px;
    border-radius: 999px;
    background: var(--color-text);
    display: block;
  }

  @media (max-width: 1024px) {
    .site-header__inner {
      padding: 0.65rem 1rem;
    }

    .site-header__toggle {
      display: flex;
    }

    .site-nav {
      position: absolute;
      left: 1rem;
      right: 1rem;
      top: calc(100% + 0.75rem);
      flex-direction: column;
      align-items: stretch;
      padding: 1rem 1.1rem;
      border-radius: 16px;
      border: 1px solid rgba(219, 219, 219, 0.8);
      background: rgba(255, 255, 255, 0.96);
      box-shadow: 0 18px 42px rgba(23, 28, 38, 0.14);
      opacity: 0;
      pointer-events: none;
      transform: translateY(-0.5rem);
      transition: opacity 0.2s ease, transform 0.2s ease;
    }

    .site-header.is-open .site-nav {
      opacity: 1;
      pointer-events: auto;
      transform: translateY(0);
    }

    .site-nav__inner {
      flex-direction: column;
      align-items: stretch;
      gap: 1.15rem;
    }

    .site-nav__search {
      display: block;
    }

    .site-nav__search .search-container {
      max-width: 100%;
      margin: 0;
    }

    .site-nav__search .search-wrapper {
      gap: 0.5rem;
    }

    .site-nav__search .search-input {
      padding: 0.85rem 1rem;
      border-radius: 999px;
      border: 1px solid rgba(23, 28, 38, 0.14);
      background: rgba(244, 245, 246, 0.95);
      font-size: 0.95rem;
    }

    .site-nav__search .search-input:focus {
      border-color: rgba(23, 28, 38, 0.25);
      box-shadow: 0 0 0 3px rgba(23, 28, 38, 0.12);
    }

    .site-nav__search .search-status {
      font-size: 0.8rem;
      color: rgba(23, 28, 38, 0.55);
    }

    .site-nav__section {
      flex-direction: column;
      align-items: stretch;
      gap: 0.65rem;
    }

    .site-nav__section-title {
      display: block;
      font-size: 0.75rem;
      font-weight: 600;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: rgba(23, 28, 38, 0.55);
    }

    .site-nav__links {
      display: flex;
      flex-direction: column;
      gap: 0.35rem;
    }

    .site-nav__link {
      width: 100%;
      padding: 0.45rem 0;
      font-size: 1rem;
    }

    .site-nav__link::after {
      bottom: 0;
      height: 1px;
    }
  }

  @media (min-width: 1025px) {
    .site-nav__links {
      gap: 1.25rem;
    }
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    const header = document.querySelector(`[data-site-header="${navId}"]`);
    if (!header) {
      console.warn('Navigation header element not found');
    } else {
      const toggle = header.querySelector('[data-nav-toggle]') as HTMLButtonElement | null;
      const nav = header.querySelector('[data-site-nav]') as HTMLElement | null;
      const links = header.querySelectorAll<HTMLAnchorElement>('[data-nav-link]');

      const searchInput = header.querySelector<HTMLInputElement>('[data-nav-search] [data-search-input]');

      const closeMenu = () => {
        header.classList.remove('is-open');
        toggle?.setAttribute('aria-expanded', 'false');
      };

      toggle?.addEventListener('click', () => {
        const isOpen = header.classList.toggle('is-open');
        toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
        if (isOpen) {
          requestAnimationFrame(() => {
            searchInput?.focus();
          });
        }
      });

      links.forEach((link) => {
        link.addEventListener('click', () => {
          closeMenu();
        });
      });

      const handleResize = () => {
        if (window.innerWidth > 1024) {
          closeMenu();
        }
      };

      window.addEventListener('resize', handleResize);
      document.addEventListener('astro:page-load', closeMenu);
      document.addEventListener('astro:before-swap', closeMenu);

      if (nav) {
        document.addEventListener('click', (event) => {
          if (!header.contains(event.target as Node)) {
            closeMenu();
          }
        });
      }

      const searchRoot = header.querySelector('[data-nav-search] [data-search-root]');
      if (searchRoot) {
        searchRoot.addEventListener('click', (event) => {
          const target = event.target as HTMLElement;
          if (target.closest('a.search-result-item')) {
            closeMenu();
          }
        });
      }
    }
  }
</script>
