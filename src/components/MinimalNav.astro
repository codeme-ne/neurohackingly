---
// Minimal navigation component for Cold Takes design
import Search from './Search.astro';

const currentPath = Astro.url.pathname;
const isHome = currentPath === '/' || currentPath === '';
const isNow = currentPath.startsWith('/now');
---

<nav class="minimal-nav">
  <div class="nav-inner">
    <a href="/" class="logo">Neurohackingly</a>
    <div class="nav-right">
      <div class="nav-links">
        <a
          href="/"
          class={`nav-link ${isHome ? 'active' : ''}`}
          aria-current={isHome ? 'page' : undefined}
        >
          Home
        </a>
        <a
          href="/now"
          class={`nav-link ${isNow ? 'active' : ''}`}
          aria-current={isNow ? 'page' : undefined}
        >
          Now
        </a>
      </div>
      <Search />
      <button
        onclick="window.toggleTheme()"
        class="theme-toggle"
        aria-label="Toggle dark mode"
        type="button"
      >
        <svg class="sun-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="10" cy="10" r="3" fill="currentColor"/>
          <path d="M10 1v2m0 14v2M4.22 4.22l1.42 1.42m8.72 8.72l1.42 1.42M1 10h2m14 0h2M4.22 15.78l1.42-1.42m8.72-8.72l1.42-1.42" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <svg class="moon-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" fill="currentColor"/>
        </svg>
      </button>
    </div>
  </div>
</nav>

<style>
  .minimal-nav {
    position: sticky;
    top: 0;
    z-index: 40;
    border-bottom: 1px solid var(--color-border-light, #e5e7eb);
    padding: 1rem 0;
    background: var(--color-bg, #fff);
    background-color: color-mix(in srgb, var(--color-bg, #fff) 92%, transparent);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    box-shadow: 0 18px 40px rgba(15, 23, 42, 0.05);
  }

  .nav-inner {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.95rem;
    padding-bottom: 0.15rem;
    border-bottom: 2px solid transparent;
    transition: color 0.15s ease, border-color 0.15s ease;
  }

  .nav-links a:hover {
    color: var(--color-accent);
    border-bottom-color: var(--color-accent);
  }

  .nav-links a.active {
    color: var(--color-accent);
    border-bottom-color: var(--color-accent);
    font-weight: 600;
  }

  .theme-toggle {
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    padding: 0.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    color: var(--color-text);
  }

  .theme-toggle:hover {
    background: var(--color-bg-light);
    border-color: var(--color-text-medium);
  }

  .theme-toggle:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  [data-theme="light"] .moon-icon,
  [data-theme="dark"] .sun-icon {
    display: none;
  }

  @media (max-width: 640px) {
    .nav-right {
      gap: 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-links a {
      font-size: 0.9rem;
    }

    .theme-toggle {
      padding: 0.4rem;
    }

    /* Ensure search trigger matches theme toggle on mobile */
    .nav-right :global(.search-trigger) {
      padding: 0.4rem;
    }
  }
</style>
